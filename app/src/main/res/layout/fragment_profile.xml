<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color5a"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msczmcz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="₹10"
                android:layout_margin="56dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter paytm number/UPI Id"
                android:layout_below="@+id/msczmcz"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:paddingEnd="16dp"
                android:alpha="0.75"
                android:id="@+id/aaa5"
                android:layout_margin="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:maxLength="50"
                android:singleLine="true"
                android:paddingStart="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter amount(Min-₹50 - ₹150)"
                android:layout_below="@+id/aaa5"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:paddingEnd="16dp"
                android:alpha="0.75"
                android:id="@+id/aaa55"
                android:inputType="number"
                android:layout_margin="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:maxLength="3"
                android:paddingStart="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chose payment method"
                android:layout_below="@+id/aaa55"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:paddingEnd="16dp"
                android:alpha="0.75"
                android:id="@+id/aaa555"
                android:layout_margin="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/custom_edittext"
                android:paddingStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_below="@+id/aaa555"
                app:backgroundTint="#4CAF50"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:paddingEnd="16dp"
                android:id="@+id/aaa5555"
                android:layout_margin="56dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:background="@drawable/custom_edittext"
                android:paddingStart="16dp"/>

            <TextView
                android:layout_below="@+id/aaa5555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:padding="16dp"
                android:text="* Withdrawl charges applied for every transation "
                android:textColor="@color/white"
                />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>